{
  "extends": "@artic-frost/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@chess/*": ["src/features/play/*"],
      "chess-lite/*": ["../../packages/chess-lite/src/*"]
    },
  },  
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
