{
  "extends": "@artic-frost/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["../../packages/ui/src/*"],
      "@/*": ["./src/*"],
      "chess-lite/*": ["../../packages/chess-lite/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", 
    "postcss.config.mjs"
   ],
  "exclude": ["node_modules"]
}